<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Issues.Issue4734"
    Title="Issue 4734">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                AutomationId="WaitForStubControl"
                LineBreakMode="WordWrap">Tapping the second Span should update the text of the ResultLabel.</Label>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            Text="Red Bold, " 
                            TextColor="Red" 
                            FontAttributes="Bold" />
                        <Span 
                            Text="Default, " 
                            AutomationId="TargetSpan">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Tapped="OnSpanTapped" />
                            </Span.GestureRecognizers>
                        </Span>
                        <Span 
                            Text="Italic small."
                            FontAttributes="Italic"
                            FontSize="Small" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label 
                x:Name="TapResultLabel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>